@model ContactVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="breadcrumb-section theme1 bg-lighten2 pt-110 pb-110">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center mb-15">
                    <h2 class="title text-dark text-capitalize">Contact</h2>
                </div>
            </div>
        </div>
    </div>
</nav>
<!-- breadcrumb-section end -->
<!-- product tab start -->
<div class="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12157.374045351913!2d49.8467656!3d40.3790787!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xd8897cf79ec36111!2s28%20Mall!5e0!3m2!1sen!2s!4v1616014426695!5m2!1sen!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
</div>

<section class="contact-section pt-80 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12 mb-30">
                <!--  contact page side content  -->
                <div class="contact-page-side-content">
                    <h3 class="contact-page-title">Contact Us</h3>
                    <p class="contact-page-message mb-30">
                        Claritas est etiam processus dynamicus, qui sequitur
                        mutationem consuetudium lectorum. Mirum est notare quam littera gothica, quam nunc putamus parum
                        claram anteposuerit litterarum formas human.
                    </p>
                    <!--  single contact block  -->

                    <div class="single-contact-block">
                        <h4><i class="fa fa-fax"></i> Address</h4>
                        <p>@Model.Bio.Address</p>
                    </div>

                    <!--  End of single contact block -->
                    <!--  single contact block -->

                    <div class="single-contact-block">
                        <h4><i class="fa fa-phone"></i> Phone</h4>
                        <p>
                            <a>Mobile: @Model.Bio.Phone</a>
                        </p>
                    </div>

                    <!-- End of single contact block -->
                    <!--  single contact block -->

                    <div class="single-contact-block">
                        <h4><i class="fas fa-envelope"></i> Email</h4>
                        <p>
                            <span>@Model.Bio.Email</span>
                        </p>
                    </div>

                    <!--=======  End of single contact block  =======-->
                </div>

                <!--=======  End of contact page side content  =======-->

            </div>
            <div class="col-lg-6 col-12 mb-30">
                <!--  contact form content -->
                <div class="contact-form-content">
                    <h3 class="contact-page-title">Tell Us Your Message</h3>
                    <div class="contact-form">
                        <form id="contact-form" method="post">
                            <div class="form-group">
                                <label>Your Name <span class="required">*</span></label>
                                <input asp-for="MessageCreateVM.Name"  id="customername">
                                <span asp-validation-for="MessageCreateVM.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Your Email <span class="required">*</span></label>
                                <input asp-for="MessageCreateVM.Email" id="customerEmail" >
                                <span asp-validation-for="MessageCreateVM.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Subject</label>
                                <input asp-for="MessageCreateVM.Subject" id="contactSubject">
                                <span asp-validation-for="MessageCreateVM.Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Your Message</label>
                                <textarea asp-for="MessageCreateVM.Context" class="pb-10" id="contactMessage"></textarea>
                                <span asp-validation-for="MessageCreateVM.Context" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" id="submit" class="btn theme-btn--dark1 btn--lg">
                                    Send Message
                                </button>
                            </div>
                        </form>
                    </div>
                    <p class="form-messegemt-10"></p>
                </div>
                <!-- End of contact -->
            </div>
        </div>
    </div>
</section>

