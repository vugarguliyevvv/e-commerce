                </div>
            </div>
        </div>
        }
        <!-- slider-item end -->
    </div>
    <!-- slick-progress -->
    <div class="slick-progress">
        <span></span>
    </div>
    <!-- slick-progress end-->
</section>
<!-- main slider end -->
<!-- common banner  start -->
<div class="common-banner bg-white pt-80">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Banners)
