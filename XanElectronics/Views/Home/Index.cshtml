                                                <a asp-controller="Shop" asp-action="Detail" asp-route-id="@item.Id">
                                                    <img class="first-img" src="~/assets/img/product/@item.ProductImages.ElementAt(0).ImageUrl"
                                                         alt="thumbnail">
                                                </a>
                                                <!-- product links -->
