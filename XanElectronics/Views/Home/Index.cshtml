                                                    </a>
                                                    
                                                </div>
                                                <div class="media-body">
                                                    <div class="product-desc">
                                                        <h3 class="title">
                                                            <a asp-controller="Shop" asp-action="Detail" asp-route-id="@item.Id">
                                                                @item.Name
                                                            </a>
                                                        </h3>
                                                        <div class="star-rating">
                                                            @for (int i = 1; i <= item.Star; i++)
                                                            {
                                                                <span class="ion-ios-star"></span>
                                                            }

                                                        </div>
