@model RegisterVm
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="breadcrumb-section theme1 bg-lighten2 pt-110 pb-110">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center mb-15">
                    <h2 class="title text-dark text-capitalize">Register</h2>
                </div>
            </div>
        </div>
    </div>
</nav>
<!-- breadcrumb-section end -->
<!-- product tab start -->
<div class="register pt-80 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="title text-capitalize mb-30 pb-25">Create an account</h3>
                <div class="log-in-form">
                    <form method="post" class="personal-information">
                        <div class="order-asguest theme1 mb-3">
                            <span>Already have an account?</span>
                            <a class="text-muted hover-color" asp-controller="Account" asp-action="Login">Log in instead!</a>
                        </div>

                        <div class="form-group row">
                            <div asp-validation-summary="ModelOnly" class="text-danger" style=""></div>
                        </div>

                        <div class="form-group row">
                            <label for="UserName" class="col-md-3 col-form-label">
                                UserName
                            </label>
                            <div class="col-md-6">
                                <input asp-for="UserName" id="firstname" class="form-control">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="FullName" class="col-md-3 col-form-label">
                                FullName
                            </label>
                            <div class="col-md-6">
                                <input asp-for="FullName" id="firstname" class="form-control">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Email" class="col-md-3 col-form-label">Email</label>
                            <div class="col-md-6">
                                <input asp-for="Email" id="lastname" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Password" class="col-md-3 col-form-label">Password</label>
                            <div class="col-md-6">
                                <div class="input-group mb-2 mr-sm-2 d-flex">
                                    <div class="col-12" style="position: relative">
                                        <input type="password" asp-for="Password" class="form-control" id="registerPassword">
                                            <button type="button" style="position: absolute;right: 0px;top: 0px" id="registerShowPasswordBtn"
                                                    class="input-group-text theme-btn--dark1 btn--md show-password">
                                                show
                                            </button>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="sign-btn text-right">
                                <button type="submit" class="btn theme-btn--dark1 btn--md">save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script >
    var registerShowPasswordBtn = document.getElementById('registerShowPasswordBtn');
    let registerPassword=document.getElementById("registerPassword");
    
    registerShowPasswordBtn.addEventListener("click",function (){
      if(registerPassword.type!=='text'){
        registerPassword.type = 'text';
      }else{
        registerPassword.type='password'
      }
      
    });
    </script>
}
