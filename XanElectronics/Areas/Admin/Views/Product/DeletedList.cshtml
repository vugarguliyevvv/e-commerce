@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "_adminLayout";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Silinen mehsullarin siyahisi</h4>
                <a asp-action="Index" class="btn btn-success mt-3">Mehsullarin siyahisi</a>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Şəkil
                                </th>
                                <th>
                                    Ad
                                </th>
                                <th>
                                    Yeni
                                </th>
                                <th>
                                    Seçilmiş
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Qiymet
                                </th>
                                <th>
                                    Endirim %
                                </th>
                                <th>
                                    YekunQiymet
                                </th>
                                <th>
                                    Düzəlişlər
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/assets/img/product/@item.ProductImages.ElementAt(0).ImageUrl" style="width:100px;height:100px" />
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.IsNew
                                    </td>
                                    <td>
                                        @item.IsFeatured
                                    </td>
                                    <td>
                                        @item.Category.Name
                                    </td>
                                    <td>
                                        @item.Price.ToString("C2")
                                    </td>
                                    <td>
                                        @item.DisCountRate
                                    </td>
                                    <td>
                                        @item.ResultPrice.ToString("C2")
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                            <i class="mdi mdi-information-variant"></i>
                                        </a>
                                        <a asp-action="Recover" asp-route-id="@item.Id" class="btn btn-danger">
                                            Berpa et
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

