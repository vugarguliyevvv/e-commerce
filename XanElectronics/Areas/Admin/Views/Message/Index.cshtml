@model IEnumerable<Message>

@{
    ViewBag.Title = "title";
    Layout = "_adminLayout";
}

 <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Mesajlar siyahisi</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Ad
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Başliq
                                    </th>
                                    <th>
                                        Mətn
                                    </th>
                                    <th>
                                        Düzəlişlər
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Message item in Model)
                                {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.Subject
                                    </td>
                                    <td>
                                        @item.Context
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
