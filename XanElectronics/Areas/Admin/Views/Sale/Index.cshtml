@model IEnumerable<Sale>

@{
    ViewBag.Title = "title";
    Layout = "_adminLayout";
}

 <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sifarişlərin siyahisi</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Sifarişçi adı
                                    </th>
                                    <th>
                                        Nomresi
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Adress
                                    </th>
                                    <th>
                                        Yekun Qiymət
                                    </th>
                                    <th>
                                        Tarix
                                    </th>
                                    
                                    <th>
                                        Ayarlar
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @item.AppUser.Fullname
                                    </td>
                                    <td>
                                        @item.Phone
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.Address
                                    </td>
                                    <td>
                                        @item.Total.ToString("C2")
                                    </td>
                                    <td>
                                        @item.Date.ToString("dddd, dd MMMM yyyy")
                                    </td>
                                    
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="mdi mdi-information-variant"></i>
                                        </a>
                                        <a asp-action="Deactive" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="far fa-calendar-check"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
