@model Sale

@{
    ViewBag.Title = "title";
    Layout = "_adminLayout";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Məhsullarin siyahisi</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                Ad
                            </th>
                            <th>
                                Qiymət
                            </th>
                            <th>
                                Say
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.SaleProducts)
                        {
                            <tr>
                                <td>
                                    @item.Product.Name
                                </td>
                                <td>
                                    @item.Price.ToString("C2")
                                </td>
                                <td>
                                    @item.Count
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <a class="btn btn-dark" asp-action="Index">Go Back</a>
</div>